<%= form_with(model: post, local: true) do |form| %>
  <div class="form__field">
    <%= form.label :title, class: "form__label" %>
    <%= form.text_field :title, class: "form__control" %>
  </div>
  <div class="form__field">
    <%= form.label :body, class: "form__label" %>
    <%= form.text_area :body, class: "form__control" %>
  </div>
  <div class="form__actions">
    <%= form.submit class: "form__button form__button--primary" %>
    <%= link_to "Cancel", root_path, class: "form__button form_button--secondary" %>
  </div>
<% end %>
