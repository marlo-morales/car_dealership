<%= form_with(url: login_path, method: :post, local: true) do |form| %>
<div class="form__field">
  <%= form.label :username, class: "form__label" %>
  <%= form.text_field :username, class: "form__control" %>
</div>
<div class="form__field">
  <%= form.label :password, class: "form__label" %>
  <%= form.password_field :password, class: "form__control" %>
</div>
<div class="form__actions">
  <%= form.submit t("login.text"), class: "form__button form__button--primary" %>
  <%= link_to t("cancel.text"), root_path, class: "form__button form_button--secondary" %>
</div>
<% end %>
